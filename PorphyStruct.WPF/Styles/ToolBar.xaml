<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PorphyStruct.WPF"
                    xmlns:extension="clr-namespace:ThemeCommons.Extension;assembly=ThemeCommons">
    <Style x:Key="{x:Static ToolBar.ButtonStyleKey}" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
        <Setter Property="Foreground" Value="{DynamicResource Light}"/>
        <Setter Property="extension:ControlExtension.StackPanelOrientation" Value="Vertical"/>
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style x:Key="ToolbarListItem" TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource ToolbarListItem}">
        <Setter Property="Foreground" Value="{DynamicResource Light}"/>
        <Setter Property="extension:ControlExtension.StackPanelOrientation" Value="Vertical"/>
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>
</ResourceDictionary>