<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PorphyStruct.WPF"
                    xmlns:controls="clr-namespace:PorphyStruct.WPF.Controls">
    <Style TargetType="{x:Type controls:Popup}" x:Key="PopupDefaultStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Popup}">
                    <Grid Background="#7f000000">
                        <Grid Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Margin="20">
                                <TextBlock Text="{Binding Title}" FontSize="20" />
                                <ContentPresenter />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>