<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ThemeCommons.Controls;assembly=ThemeCommons">
    <Style TargetType="{x:Type TextBox}" x:Key="SidebarTextBox" BasedOn="{StaticResource ThemeCommonsDefaultTextBox}">
        <Setter Property="Margin" Value="2 0 10 0"/>
    </Style>
    <Style TargetType="{x:Type controls:ColorPickerTextBox}" x:Key="SidebarColorPickerTextBox" BasedOn="{StaticResource ColorPickerTextBox}">
        <Setter Property="Margin" Value="2 0 10 0"/>
    </Style>
</ResourceDictionary>