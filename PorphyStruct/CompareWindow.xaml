<Window x:Class="PorphyStruct.CompareWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:lang="clr-namespace:PorphyStruct.Properties.Language"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI"
        Style="{DynamicResource DefaultWindowStyle}"
        Title="{x:Static lang:Compare.Title}" Height="500" Width="750" ResizeMode="NoResize">
    <DockPanel>
        <TextBlock TextWrapping="Wrap" DockPanel.Dock="Top" Padding="10" TextAlignment="Justify" FontWeight="Light">
            <Run Text="{x:Static lang:Compare.Info}"/>
             <Run FontSize="10" Text="{x:Static lang:Compare.Note}"/>
        </TextBlock>
       
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <!--ok/reset-->
            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Content="{x:Static lang:Compare.Add}" x:Name="Add" Click="Add_Click" Margin="5"/>
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}"  Content="{x:Static lang:Compare.Remove}" x:Name="RemoveAll" Click="RemoveAll_Click" Margin="5"/>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10" Grid.Column="0">
                <TextBlock Text="{x:Static lang:Compare.Add}" FontWeight="Light" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 15"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox IsReadOnly="True" x:Name="comparisonPath" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="{x:Static lang:Compare.File}" Width="250"/>
                    <Button Content="{x:Static lang:Compare.Search}" x:Name="openBtn" Click="Open_Click" />
                </StackPanel>
                <TextBlock Text="{x:Static lang:Compare.Preview}" FontWeight="Light" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 15"/>
                <oxy:PlotView x:Name="CompPlot" Height="200" Model="{Binding Model}"/>
            </StackPanel>
            <StackPanel Margin="10" Grid.Column="1">
                <TextBlock Text="{x:Static lang:Compare.Data}" FontWeight="Light" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 15"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="250">
                    <ItemsControl x:Name="CompList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="PART_Border" Padding="7">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="1" VerticalAlignment="Center" Width="30" Padding="0" Margin="0" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.DeleteCommand}" CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Delete" Foreground="{DynamicResource SecondaryAccentBrush}"/>
                                        </Button>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
