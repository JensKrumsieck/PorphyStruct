<Window x:Class="PorphyStruct.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PorphyStruct"
        mc:Ignorable="d"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:properties="clr-namespace:PorphyStruct.Properties"
        Title="Save File" Height="400" Width="350" ResizeMode="NoResize">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="324" x:Name="SaveFormat_CB">
            <ComboBoxItem x:Name="cbi_png" IsSelected="True">Displacement Image (.png)</ComboBoxItem>
            <ComboBoxItem x:Name="cbi_svg">Displacement Vector Image (.svg)</ComboBoxItem>
            <ComboBoxItem x:Name="cbi_ascii">Displacement ASCII (.dat)</ComboBoxItem>
            <ComboBoxItem x:Name="cbi_pdf">PDF-Report (.pdf)</ComboBoxItem>
            <ComboBoxItem x:Name="cbi_docx">Report Word-File (.docx)</ComboBoxItem>
            <ComboBoxItem x:Name="cbi_ixyz">Molecule (Cycle only) iXYZ (.ixyz)</ComboBoxItem>
            <ComboBoxItem x:Name="cbi_mixyz">Molecule iXYZ (.ixyz)</ComboBoxItem>
        </ComboBox>
        <Label Content="Select Export Format" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PathTB"
  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
  Text="{Binding Source={x:Static properties:Settings.Default}, Path=savePath}" Margin="9,176,140.5,141">
            <materialDesign:HintAssist.Hint>
                <StackPanel
      Orientation="Horizontal"
      Margin="-2 0 0 0">
                    <TextBlock>
      Folder Path
                    </TextBlock>
                </StackPanel>
            </materialDesign:HintAssist.Hint>
        </TextBox>
        <Button Content="Select Folder" HorizontalAlignment="Left" Margin="209,184,0,0" VerticalAlignment="Top" Width="125" Click="Search_Click" Height="42" />
        <Button Content="Save" HorizontalAlignment="Stretch" Margin="4,325,4,10" Click="Save_Click" />
        <CheckBox Content="Close on Save" HorizontalAlignment="Left" Margin="10,289,0,0" VerticalAlignment="Top" x:Name="CloseCB" IsChecked="True"/>
        <TextBox x:Name="Title_TB"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            Text="" Margin="10,100,10.5,217">
            <materialDesign:HintAssist.Hint>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="-2 0 0 0">
                    <TextBlock><Run Text="Title"/></TextBlock>
                </StackPanel>
            </materialDesign:HintAssist.Hint>
        </TextBox>
    </Grid>
</Window>
