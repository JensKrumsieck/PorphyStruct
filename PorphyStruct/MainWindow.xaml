<Window x:Class="PorphyStruct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PorphyStruct"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:styles="clr-namespace:PorphyStruct.Styles"
        xmlns:lang="clr-namespace:PorphyStruct.Properties.Language"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI"
        Style="{DynamicResource DefaultWindowStyle}"
        styles:DefaultWindow.FileName="{Binding Cycle.Title}"
        Title="Structural Analysis of Porphyrinoids (PorphyStruct)" Height="780" Width="1230">
    <!--Shortcut section-->
    <Window.Resources>
        <RoutedUICommand x:Key="Open" Text="Open" />
        <RoutedUICommand x:Key="Save" Text="Save" />
        <RoutedUICommand x:Key="Analyze" Text="Analyze" />
        <RoutedUICommand x:Key="Simulate" Text="Simulate" />
        <RoutedUICommand x:Key="Refresh" Text="Refresh" />
        <RoutedUICommand x:Key="Normalize" Text="Normalize" />
        <RoutedUICommand x:Key="Invert" Text="Invert" />
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource Open}" Executed="Open_Click" />
        <CommandBinding Command="{StaticResource Save}" Executed="Save_Click" />
        <CommandBinding Command="{StaticResource Analyze}" Executed="Analyze_Click" />
        <CommandBinding Command="{StaticResource Simulate}" Executed="SimButton_Click" />
        <CommandBinding Command="{StaticResource Invert}" Executed="InvertButton_Click" />
        <CommandBinding Command="{StaticResource Normalize}" Executed="NormalizeButton_Click" />
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{StaticResource Open}" />
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{StaticResource Save}" />
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{StaticResource Analyze}" />
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{StaticResource Simulate}" />
        <KeyBinding Key="I" Modifiers="Ctrl" Command="{StaticResource Invert}" />
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{StaticResource Normalize}" />
    </Window.InputBindings>
    <!--/Shortcut section-->

    <DockPanel>        
        <ToolBarTray Grid.ColumnSpan="4" Grid.Row="0" Style="{DynamicResource MaterialDesignToolBarTray}" Background="{DynamicResource TitleBackgroundBrush}" DockPanel.Dock="Top">
            <ToolBar Style="{DynamicResource MaterialDesignToolBar}" HorizontalAlignment="Stretch" Background="{DynamicResource TitleBackgroundBrush}">
                <Button ToolTip="{x:Static lang:Main.OpenToolTip}" Click="Open_Click" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="FolderOpen"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Open}" />
                    </StackPanel>
                </Button>
                <Button ToolTip="{x:Static lang:Main.SaveToolTip}" Click="Save_Click" x:Name="SaveButton" IsEnabled="False" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ContentSave" HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Save}"/>
                    </StackPanel>
                </Button>
                <Separator />
                <Button ToolTip="{x:Static lang:Main.AnalyzeToolTip}" Click="Analyze_Click" IsEnabled="False" x:Name="AnalButton" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Flask"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Analyze}"/>
                    </StackPanel>
                </Button>
                <Button ToolTip="{x:Static lang:Main.CompareToolTip}" Click="CompButton_Click" 
                        IsEnabled="False" x:Name="CompButton" Style="{StaticResource ToolbarButton}" Tag="{Binding HasComparison}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Compare"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Compare}"/>
                    </StackPanel>
                </Button>
                <Separator />
                <Button ToolTip="{x:Static lang:Main.NormalizeToolTip}" Click="NormalizeButton_Click" 
                        x:Name="NormalizeButton" IsEnabled="False" Style="{StaticResource ToolbarButton}" Tag="{Binding Normalize}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ArrowExpandVertical" HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Normalize}"/>
                    </StackPanel>
                </Button>
                <Button ToolTip="{x:Static lang:Main.InvertToolTip}" Click="InvertButton_Click" 
                        x:Name="InvertButton" IsEnabled="False" Style="{StaticResource ToolbarButton}" Tag="{Binding Invert}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Contrast"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Invert}"/>
                    </StackPanel>
                </Button>
                <Separator />
                <Button ToolTip="{x:Static lang:Main.SimulateToolTip}" Click="SimButton_Click" x:Name="SimButton" IsEnabled="False" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AutoFixHigh"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Simulate}"/>
                    </StackPanel>
                </Button>
                <Button ToolTip="{x:Static lang:Main.DifferenceToolTip}" Click="DiffSimButton_Click" 
                        x:Name="DiffSimButton" IsEnabled="False" Style="{StaticResource ToolbarButton}"
                        Tag="{Binding HasDifference}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="VectorDifference"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Difference}"/>
                    </StackPanel>
                </Button>
                <Button ToolTip="{x:Static lang:Main.DelSimToolTip}" Click="DelSimButton_Click" 
                        x:Name="DelSimButton" IsEnabled="False" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="DeleteForeverOutline"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.RemSim}"/>
                    </StackPanel>
                </Button>

                <Separator />
                <Button ToolTip="{x:Static lang:Main.CenterToolTip}" Click="CenterMolButton_Click" x:Name="CenterMolButton" IsEnabled="False" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ArrowCollapseAll"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Center}"/>
                    </StackPanel>
                </Button>
                <Button ToolTip="{x:Static lang:Main.DetectToolTip}" Click="Detect_Click" x:Name="DetectMolButton" IsEnabled="False" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="TableSearch"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.Detect}"/>
                    </StackPanel>
                </Button>

                <Separator />
                <Button ToolTip="{x:Static lang:Main.SettingsToolTip}" Click="SettingsButton_Click" x:Name="SettingsButton" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Settings"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9"  Text="{x:Static lang:Main.Settings}"/>
                    </StackPanel>
                </Button>
                <Separator />
                <Button ToolTip="{x:Static lang:Main.AboutToolTip}" Click="InfoButton_Click" x:Name="InfoButton" Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="InfoCircle"  HorizontalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Center" FontSize="9" Text="{x:Static lang:Main.About}"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <oxy:PlotView x:Name="displaceView" Grid.Column="0" Model="{Binding Model}">
                <oxy:PlotView.Background>
                    <ImageBrush ImageSource="Resources/porphystructlogo.png" Stretch="None"/>
                </oxy:PlotView.Background>
            </oxy:PlotView>
            <UniformGrid Rows="2" Grid.Column="1">
                <h:HelixViewport3D x:Name="MolViewer" ShowViewCube="False" ShowCoordinateSystem="True" ZoomExtentsWhenLoaded="True" Background="#FFFAFAFA" ItemsSource="{Binding Molecule3D}">
                    <h:DefaultLights/>
                </h:HelixViewport3D>
                <TabControl BorderBrush="{x:Null}" Background="Transparent">
                    <TabItem Header="{x:Static lang:Main.Coordinates}">
                        <DataGrid IsSynchronizedWithCurrentItem="True" x:Name="coordGrid" CanUserSortColumns="True" CanUserAddRows="False" ItemsSource="{Binding Cycle.Atoms}" 
                                  AutoGenerateColumns="False" Style="{DynamicResource MaterialDesignDataGrid}" SelectedItem="{Binding SelectedItem}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Identifier, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="{x:Static lang:Main.Identifier}"/>
                                <DataGridCheckBoxColumn Binding="{Binding IsMacrocycle, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="{x:Static lang:Main.IsMacrocycle}" SortDirection="Descending"/>
                                <DataGridTextColumn Binding="{Binding X, StringFormat=N4, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="X" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Y, StringFormat=N4, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="Y" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding Z, StringFormat=N4, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Header="Z" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="{x:Static lang:Main.Properties}">
                            <DataGrid x:Name="Cycle_Properties" CanUserAddRows="False" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{x:Static lang:Main.Property}" Binding="{Binding Name}" IsReadOnly="True" />
                                <DataGridTextColumn Header="{x:Static lang:Main.Value}" Binding="{Binding Value}" IsReadOnly="True"/>
                            </DataGrid.Columns>
                            <DataGrid.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock FontWeight="Bold" FontSize="12" Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Expander IsExpanded="True">
                                                            <Expander.Header>
                                                                <Border Padding="5" Margin="-15 0 0 0">
                                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                                                </Border>
                                                            </Expander.Header>
                                                            <ItemsPresenter />
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </DataGrid.GroupStyle>
                            </DataGrid>
                    </TabItem>
                </TabControl>
            </UniformGrid>
        </Grid>        
    </DockPanel>
</Window>
